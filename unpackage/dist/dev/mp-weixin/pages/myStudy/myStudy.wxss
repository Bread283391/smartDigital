
.index{
		overflow-x: hidden;
}
page{
		background-color: #ffffff;
}
.top{
		width: 100%;
		height: 360rpx;
		/* background-color: #a0cfff; */
		background-color: #409eff;
}
.top::before{
		content: '';
		width: 100%;
		height: 420rpx;
		z-index: -1;
		left: 0%;
		position: absolute;
		background-color: #409eff;
		/* filter: blur(15px); */
}
.user-image{
		width: 250rpx;
		height: 250rpx;
		border-radius: 50%;
}
.user-box{
		width: 250rpx;
		position: relative;
		left:50%;
		top:50%;
		transform: translate(-50%,-50%);
}
.user-name{
		text-align: center;
		font-size: 36rpx;
		color: #ffffff;
		text-shadow: 2px 2px 3px #337ecc;
}
.center{
		width: 100%;
		height: 100rpx;
}
.center-button{
		width: 480rpx;
		height: 100%;
		line-height: 100rpx;
		position: relative;
		left: 50%;
		transform: translateX(-50%);
		background-color: #ffffff;
		border-radius: 20px;
		padding: 0rpx 30rpx;
		box-shadow: 3px 3px 10px #909399;
}
.center-text{
		float: left;
}
.center-text-item{
		font-size: 24rpx;
		color: #909399;
		margin-left: 10rpx;
}
.center-icon{
		float: right;
}
.icon{
		color: #fff;
		float: right;
}
.bottom{
		width:100%;
		box-shadow: 0 0 10px #e9e9eb;
		overflow: hidden;
		margin-top: 10rpx;
}
.line-box{
		width: 80%;
		position: relative;
		left: 50%;
		transform: translateX(-50%);
		margin-top: 60rpx;
}
