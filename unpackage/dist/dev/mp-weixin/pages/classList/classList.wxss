
.top{
	width: 100%;
	height: 80rpx;
	background-color: #ffffff;
	box-shadow: 0 0 10px #dedfe0;
	overflow-x: scroll;
	overflow-y: hidden;
	white-space: nowrap;
}
.top-bar{
	width: 100%;
	height: 100rpx;
	line-height: 80rpx;
	padding-left: 50rpx;
}
.top-item{
	text-align: center;
	margin-right: 80rpx;
	font-size: 24rpx;
}
.selected{
	color: #409eff;
	border-bottom: 2px #409eff solid;
	font-size: 30rpx;
	font-weight: bold;
	position: relative;
	top: 5%;
}
