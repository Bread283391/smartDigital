.middle1{
		width: 100%;
		height: 200rpx;
		box-shadow: 0  0 10px #e9e9eb;
		box-sizing: border-box;
		margin-top: 30rpx;
}
.middle1-title{
		width:100%;
		height: 60rpx;
		line-height: 60rpx;
		font-size: 30rpx;
		margin-left: 30rpx;
}
.middle1-content-box{
		padding: 20rpx 50rpx;
		box-sizing: border-box;
}
.middle1-content{
		width: 120rpx;
}
.middle1-content1{
		float: left;
}
.middle1-content2{
		float: left;
		position: absolute;
		left: 50%;
		transform: translate(-50%);
}
.middle1-content3{
		float: right;
}
.number{
		text-align: center;
		font-size: 40rpx;
		font-weight: bold;
}
.number-text{
		margin-top: 10rpx;
		text-align: center;
		font-size: 24rpx;
}
.middle2{
		width: 100%;
		height: auto;
		box-shadow: 0  0 10px #e9e9eb;
		box-sizing: border-box;
		margin-top: 30rpx;
}
.middle2-title{
		width:100%;
		height: 60rpx;
		line-height: 60rpx;
		font-size: 30rpx;
		margin-left: 30rpx;
}
.middle2-content-box{
		padding: 20rpx 0rpx 50rpx 0rpx;
		box-sizing: border-box;
		display: flex;
		flex-wrap: wrap;
		flex-direction: row;
}
.middle2-content{
		width: 120rpx;
		flex: 0 0 20%;
		justify-content: space-evenly;
}
.middle2-icon{
		text-align: center;
}
.icon-text{
		margin-top: 10rpx;
		text-align: center;
