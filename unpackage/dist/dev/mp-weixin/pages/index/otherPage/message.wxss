.top{
		width: 100%;
		height: 360rpx;
}
.carousel-box{
		margin-top: 30rpx;
		width: 90%;
		height: 100%;
		position: relative;
		left:50%;
		transform: translateX(-50%);
		border-radius: 10rpx;
		border: 1rpx black solid;
}
.carousel{
		width: 100%;
		height: 100%;
}
.carousel-image{
		width: 100%;
		height: 100%;
		border-radius: 10rpx;
}
.content-box{
		margin-top: 50rpx;
}
.content-title{
		font-size: 42rpx;
}
.card{
		width: 95%;
		height: 200rpx;
		margin-top: 10rpx;
		position: relative;
		left: 50%;
		transform: translateX(-50%);
		background-color: #ffffff;
		border-radius: 10px;
		box-shadow: 0 0 10px #e9e9eb;
		padding-right: 20rpx;
		box-sizing: border-box;
}
.image-box .image{
		width: 320rpx;
		height: 200rpx;
		border-radius: 10px;
		float: left;
		border: 0.5px #fff solid;
}
.text-box{
		float: left;
		height: 100%;
		width: 350rpx;
		border: 0.5px #fff solid;
		margin-left: 20rpx;
		white-space: normal;
}
.text-line{
		 margin-top: 10rpx;
}
.text-line1{
		color: #303133;
}
.text-class-name{
		font-size: 24rpx;
		font-weight: bold;
}
